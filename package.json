{
  "name": "marvel-api-pontua",
  "version": "1.0.0",
  "description": "Teste para vaga de frontend pleno, pela empresa Pontua",
  "main": "index.js",
  "keywords": [
    "nodejs",
    "api",
    "api-marvel"
  ],
  "author": "Felipe Dias Alvarenga",
  "license": "ISC",
  "scripts": {
    "build": "npm run build:server && npm run build:remix",
    "build:server": "tsc -p tsconfig.server.json",
    "build:remix": "remix build",
    "dev": "npm-run-all build:remix --parallel \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node ./server-build/server.js",
    "format": "prettier --write ./app ./mocks ./tests",
    "lint": "npm run typecheck && eslint ./app",
    "lint:fix": "npm run format && npm run lint -- --fix",
    "typecheck": "tsc -b",
    "test": "cross-env NODE_ENV=test TZ=UTC vitest",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:ci": "cross-env NODE_ENV=test TZ=UTC vitest run --coverage",
    "start:e2e": "cross-env NODE_ENV=test node -r dotenv/config ./server-build/server.js dotenv_config_path=.env.test",
    "prepare:e2e": "rm -rf .cache/ coverage-e2e/ .nyc_output/ playwright-report/ && npm run build",
    "test:e2e": "npm run prepare:e2e && nyc playwright test",
    "test:e2e:debug": "npm run test:e2e -- --debug",
    "test:e2e:open": "npm run test:e2e && playwright show-report"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.1.1",
    "@remix-run/dev": "^1.18.1",
    "@remix-run/express": "^1.18.1",
    "@remix-run/node": "^1.18.1",
    "@remix-run/react": "^1.18.1",
    "@remix-run/server-runtime": "^1.18.1",
    "@remix-run/v1-route-convention": "^0.1.2",
    "@types/cleave.js": "^1.4.7",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/md5": "^2.3.2",
    "@types/morgan": "^1.9.4",
    "axios": "^1.4.0",
    "cleave.js": "^1.6.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
